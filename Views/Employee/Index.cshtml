@{
    ViewBag.Title = "Employee List";
}

<h2>Employee List</h2>

@* Normal and ThemeRoller*@
<table id="employeeTable" class="display">
@*Semantic UI*@
@*<table id="employeeTable" class="ui celled table">*@
@*Bootstrap*@
@*<table id="employeeTable" class="table table-striped table-bordered">*@

    <thead>
        <tr>
            <th>Name</th>
            <th>Position</th>
            <th>Office</th>
            <th>Age</th>
            <th>Salary</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Name</th>
            <th>Position</th>
            <th>Office</th>
            <th>Age</th>
            <th>Salary</th>
        </tr>
    </tfoot>
</table>

